{
    "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single"
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "organizeImports": {
      "enabled": true
    }
  }
  